{
	"name": "ralph",
	"version": "0.15.0",
	"description": "A CLI tool for long-running PRD-driven development with Cursor CLI",
	"module": "src/index.tsx",
	"type": "module",
	"bin": {
		"ralph": "./src/index.tsx"
	},
	"scripts": {
		"dev": "bun run src/index.tsx",
		"build": "bun run scripts/build.ts",
		"typecheck": "tsc --noEmit",
		"check": "biome format --write && biome check --write --unsafe && eslint --fix .",
		"check:ci": "biome format && biome check && eslint .",
		"prepare": "husky",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "bun run build",
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"knip": "knip",
		"docs:dev": "bun run --cwd docs dev",
		"docs:start": "bun run --cwd docs start",
		"docs:build": "bun run --cwd docs build",
		"docs:preview": "bun run --cwd docs preview",
		"docs:check": "bun run --cwd docs check"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@changesets/cli": "2.29.8",
		"@commitlint/cli": "20.3.1",
		"@commitlint/config-conventional": "20.3.1",
		"@eslint/js": "9.39.2",
		"@types/bun": "1.3.6",
		"@types/react": "19.2.9",
		"eslint": "9.39.2",
		"husky": "9.1.7",
		"knip": "5.82.1",
		"react-devtools-core": "7.0.1",
		"typescript": "5.9.3",
		"typescript-eslint": "8.53.1"
	},
	"dependencies": {
		"ink": "6.6.0",
		"ink-select-input": "6.2.0",
		"ink-spinner": "5.0.0",
		"react": "19.2.3",
		"ts-pattern": "5.9.0",
		"zustand": "5.0.10"
	}
}

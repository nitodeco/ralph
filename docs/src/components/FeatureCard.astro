---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div
  class="p-6 bg-[var(--color-bg-elevated)] border border-[var(--color-border)] rounded-lg hover:border-[var(--color-brand-subtle)] transition-colors"
>
  <div class="text-3xl mb-3" aria-hidden="true">{icon}</div>
  <h3 class="text-lg font-semibold mb-2">{title}</h3>
  <p class="text-sm text-[var(--color-text-muted)] leading-relaxed">
    {description}
  </p>
</div>

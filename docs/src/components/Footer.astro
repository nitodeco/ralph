---
const FOOTER_NAV = [
  { label: "Docs", href: "/docs" },
  { label: "Changelog", href: "/changelog/" },
  { label: "GitHub", href: "https://github.com/nitodeco/ralph", isExternal: true },
  { label: "License", href: "https://github.com/nitodeco/ralph/blob/main/LICENSE", isExternal: true },
];
---

<footer class="border-t border-border-subtle bg-bg" role="contentinfo">
  <div class="mx-auto max-w-7xl px-4 py-10 sm:px-6 lg:px-8">
    <div class="flex flex-col items-center gap-6 sm:flex-row sm:justify-between">
      <a href="/" class="flex shrink-0 items-center gap-2 font-mono text-text hover:text-brand transition-colors" aria-label="Ralph - Home">
        <img
          src="/ralph.webp"
          alt="Ralph"
          class="h-8 w-auto max-w-[140px] object-contain"
        />
      </a>

      <nav class="flex flex-wrap justify-center gap-6" aria-label="Footer navigation">
        {FOOTER_NAV.map((item) => (
          <a
            href={item.href}
            class="text-sm text-text-muted hover:text-text transition-colors"
            {...(item.isExternal ? { target: "_blank", rel: "noopener noreferrer" } : {})}
          >
            <span class="flex items-center gap-1">
              {item.label}
              {item.isExternal && (
                <svg class="w-3 h-3 opacity-40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M7 17L17 7M17 7H7M17 7V17" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
              )}
            </span>
            {item.isExternal && <span class="sr-only">(opens in new tab)</span>}
          </a>
        ))}
      </nav>
    </div>

    <div class="mt-8 pt-6 border-t border-border-subtle">
      <p class="text-xs text-text-subtle text-center font-mono">
        MIT License
      </p>
    </div>
  </div>
</footer>

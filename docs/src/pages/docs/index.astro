---
import { getCollection, render } from "astro:content";
import DocsLayout from "@/layouts/DocsLayout.astro";

const docs = await getCollection("docs");
const introDoc = docs.find((doc) => doc.id === "getting-started/introduction");

if (!introDoc) {
  return Astro.redirect(import.meta.env.BASE_URL);
}

const { Content, headings } = await render(introDoc);

const breadcrumbs = [
  { label: "Docs", href: `${import.meta.env.BASE_URL}docs` },
  { label: "Getting Started", href: `${import.meta.env.BASE_URL}docs/getting-started/introduction` },
  { label: "Introduction" },
];
---

<DocsLayout title="Documentation" description="Complete documentation for Ralph, the CLI tool for long-running PRD-driven development with AI coding agents like Cursor, Claude Code, and Codex." breadcrumbs={breadcrumbs} headings={headings}>
  <Content />
</DocsLayout>
